{% extends 'base.html.twig' %}

{% block title %}Propositions{% endblock %}

{% block body %}

	{% include '_partials/_flash_messages.html.twig' %}


	<main class="">

		<div class="row">
			<div class="col bg-white mb-4 shadow-sm">
				<h1>Tu souhaites faire une proposition pour une soirée, une activité, du covoiturage,... ?</h1>

				<p>C'est ici qu'il faut le poster</p>

				<table class="table table-lg table-stripped table-hover mt-4">
					<thead class="" style="background-color: #393939; color: white;">
						<tr class="">
							<th scope="col">Prénom</th>
							<th scope="col">Ville</th>
							<th scope="col">Date</th>
							<th scope="col">Remarques</th>
						</tr>
					</thead>
					<tbody>
						{% for proposition in propositionList %}
							<tr>
								<td>{{ proposition.firstname }}</td>
								<td>{{ proposition.city }}</td>
								<td>{{ proposition.date | date('d/m/Y') }}</td>
								<td>{{ proposition.note }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>


			</div>
		</div>


		{# TODO FORM #}

		<div class="row">
			<div class="col">

                <div class="card shadow-sm p-3">
                    {{ form_start(formProposition) }}

                    <div class="row">
                        <div class="col">
                             {{ form_row(formProposition.firstname) }}
                        </div>
                        <div class="col">
                            {{ form_row(formProposition.city) }}
                        </div>
                        <div class="col">
                            {{ form_row(formProposition.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(formProposition.note) }}
                        </div>
                    </div>
                    <div class="text-center my-3">
                        <button type="submit" class="btn btn-primary">J'envoie la sauce</button>
                    </div>

                    {{ form_end(formProposition) }}            
                </div>
			</div>
		</div>


	</main>

{% endblock %}
