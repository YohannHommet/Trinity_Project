{% extends 'base.html.twig' %}

{% block title %}Liste des participants{% endblock %}

{% block body %}

	<main class="position-absolute top-50 start-50 translate-middle p-4 bg-body rounded">

		<h1>Voici la liste des participants</h1>

		<table class="table table-lg table-stripped table-hover mt-4">
			<thead class="" style="background-color: #393939; color: white;">
				<tr class="">
					<th scope="col">Prénom</th>
					<th scope="col">Nom</th>
					<th scope="col">Localisation</th>
					<th scope="col">Département</th>
					<th scope="col">Remarques</th>
				</tr>
			</thead>
			<tbody>
				{% for user in list %}
					<tr>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.city }}</td>
						<td>{{ user.department }}</td>
						<td>{{ user.note }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>

</main>{% endblock %}
